//1. Faça um algoritmo que receba dois números e exiba o resultado da sua soma.

programa
{
	
	funcao inicio()
	{
		real a, b, soma
		
		escreva("Digite o primeiro número: ")
		leia(a)

		escreva("Digite o segundo número: ")
		leia(b)

		soma = a + b 
		

		escreva("\nA soma dos números é igual a: ", soma) 		
		
	}
}
	
